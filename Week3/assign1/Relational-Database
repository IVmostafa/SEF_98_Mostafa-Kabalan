<?php
require_once "DataBase";
require_once "Table";

$dir = "Database";
echo "Database :";
$database = new Database(trim(fgets(STDIN)));
if($path = $database->create()) {
    $dir = "Database".DIRECTORY_SEPARATOR.$path;
}
echo "Table :";
$table = new Table(trim(fgets(STDIN)));
if($path = $table->create($dir, array('a', 'b', 'c', 'd', 'f'))) {
    $file = $dir.DIRECTORY_SEPARATOR.$path;
}
echo "$file";
?>